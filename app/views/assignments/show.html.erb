<div class="container">
    <h1>
      <%= @assignment.title %>
    </h1>
    <% if student? %>
      <%= draw_status(@assignment, current_user) %>
    <% end %>

      <p>
      <strong>Assigned:</strong>
      <%= @assignment.date.to_formatted_s(:long_ordinal) %><br>
      <strong>Due:</strong>
      <%= @assignment.due.to_formatted_s(:long_ordinal) %><br>
      <strong>Hours Until Due:</strong>
      <%= ((@assignment.due - DateTime.now)/3600).to_i %>
    </p>

      <%= markdown(@assignment.description) %>

    <% if teacher? %>
      <h3>Students</h3>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Status</th>
          </tr>
        </thead>

        <tbody>
          <% @students.each do |student| %>
             <tr>
               <td>
                 <%= student.name %>
               </td>
               <td>
                 <%= draw_status(@assignment, student) %>
               </td>
             </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
    <p>
      <ul class="button-group">
        <% if student? %>
        <li><%= link_to 'See all Assignments', assignments_path, class: "button" %><li>
      </ul>
    </p>

    <p>
      <%= render 'submissions/form' %>
    </p>
</div>
